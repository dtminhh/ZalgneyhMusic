<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:centerColor="#A63D44FF" android:centerX="0.53" android:endColor="#E63D44FF" android:startColor="#996A00FF"
                android:useLevel="false"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0EEEEEE"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</layer-list>
