<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTitleFormat">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="SubTitleFormat">
        <item name="android:textColor">@color/black_50opa</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>

    <style name="SignTitleFormat">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="CompactBottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>