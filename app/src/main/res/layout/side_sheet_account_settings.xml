<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/side_sheet_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="16dp"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with User Info -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_shape_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- User Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgUserAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:strokeColor="@color/bottom_nav_icon_selector"
                app:strokeWidth="2dp" />

            <!-- User Name -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/urbanist_semibold"
                android:text="@string/user_name"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- User Email -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/urbanist_medium"
                android:text="@string/user_email_com"
                android:textColor="@color/black_50opa"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/black_50opa" />

        <!-- Settings List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAccountSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>

